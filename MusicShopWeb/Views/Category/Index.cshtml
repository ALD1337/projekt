@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Index Category</h1>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Nazwa kategorii</th>
            <th>Kolejność kategorii</th>
            <th>Akcja</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edytuj</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>